/* pages/user/user.wxss */

.userIcon{
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
}
.topuserIcon{
  padding-top: 60rpx;
  position: relative;
  z-index: 100;
}
.usercontainertop{
  height: 745rpx;
}
.userbg{
  width: 100%;
  height: 750rpx;
  position: absolute;
  z-index: -100;
}
.usertop{
  display: flex;
  height: 160rpx;
  margin-top:170rpx; 
  /* background: yellow; */
  padding-bottom:20rpx; 
  /* justify-content: space-between; */
  align-items: center;
  justify-content: center;
  flex-direction: column;

}
.ut-left{
  width: 400rpx;
  height: 130rpx;
  display: flex;
  justify-content: space-around;
  margin-left: 20rpx;
  margin-top:25rpx; 
}
.username{
  color: white;
  font-size: 35rpx;
  font-weight: 600;
}
.useredit{
  width: 40rpx;
  height: 40rpx;

}
.userinfo-avatar{
  width: 155rpx;
  height: 155rpx;
  border: 10rpx solid white;
  border-radius: 50%;
}
.getbutton{
  width: 155rpx;
  height: 155rpx;
  border-radius: 50%;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.studycount{
  margin: 100rpx auto 0;
  width: 400rpx;
  height: 110rpx;
  background: white;
  border-radius: 20rpx;
  padding: 20rpx 50rpx;
  display: flex;
  font-size: 30rpx;
  color: #9B9B9B;
  justify-content: space-between;
}
.study{
  display: flex;
  align-items: center;
}
.studycount-leftright{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.middleline{
  border-right: 1rpx solid #F0F0F0;
}
.studyday{
  font-size: 35rpx;
  color: black;
  margin-right: 5rpx;
  font-weight: 550;
}
.userbottom{
  width: 100%;
  height: 300rpx;
  background: #F8F8F6;
  padding-top:20rpx; 
}
.userbottom-msg{
  width: 700rpx;
  height: 400rpx;
  background: white;
  margin: 0 auto ;
  border-radius: 10rpx;
}
.msg-img{
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}
.msg-imgS{
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}
.b-msg{
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom: 7rpx dotted #DFDFDF;
  padding: 10rpx 20rpx;
  justify-content: space-between;
}
.b-msg-l{
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
}
.b-msg-r{
  color: #D7DBDE;
}
.b-msgS{
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 10rpx 20rpx;
  justify-content: space-between;
}
.last{
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  font-size: 30rpx;
  color: #7B7B79;
}
